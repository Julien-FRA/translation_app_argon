# This file must be in the root
# Mark this as the root editorconfig file
root = true

# Base ruleset for all files
[*]
trim_trailing_whitespace = true
insert_final_newline = true
indent_style = space
indent_size = 2
charset = utf-8

# Markdown syntax specifies that trailing whitespaces can be meaningful,
# so letâ€™s not trim those. e.g. 2 trailing spaces = linebreak (<br />)
[*.md]
trim_trailing_whitespace = false